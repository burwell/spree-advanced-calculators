<table>
  <% if @bucket_rate.calculator_id.blank? %>
    <tr>
      <td><%=t("calculator")%>:</td>
      <td>
        <%= collection_select(
          :bucket_rate,
          :calculator_id, @available_calculators,
          :id, :name, {}, {"style" => "width:200px"}
        ) %>
      </td>
    </tr>
  <% else %>
    <%= f.hidden_field :calculator_id %>
  <% end %>
  <tr>
    <td><%= t("floor", :scope => 'activerecord.attributes.bucket_rate') %>:</td>
    <td>
      <%= f.text_field :floor, {"style" => "width:60px"} %>
      <%= @bucket_rate.unit %>
    </td>
  </tr>
  <tr>
    <td><%= t("ceiling", :scope => 'activerecord.attributes.bucket_rate') %>:</td>
    <td>
      <%= f.text_field :ceiling, {"style" => "width:60px"} %>
      <%= @bucket_rate.unit %>
    </td>
  </tr>
  <tr>
    <td><%= t("base_rate", :scope => 'activerecord.attributes.bucket_rate') %>:</td>
    <td>
      <%= f.text_field :base_rate, {"style" => "width:60px"} %>
      <%= t(:'number.currency.format.unit') %>
    </td>
  </tr>
  <tr>
    <td><%= t("additional_rate", :scope => 'activerecord.attributes.bucket_rate') %>:</td>
    <td>
      <%= f.text_field :additional_rate, {"style" => "width:60px"} %>
      <%= t(:'number.currency.format.unit') %>
    </td>
  </tr>
  <tr>
    <td><%= t("value_increment", :scope => 'activerecord.attributes.bucket_rate') %>:</td>
    <td>
      <%= f.text_field :value_increment, {"style" => "width:60px"} %>
      <%= t(:'number.currency.format.unit') %>
    </td>
  </tr>
</table>
